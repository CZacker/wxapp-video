/* pages/list/list.wxss */

.movie-card {
  display: flex;
  width: 660rpx;
  margin: 25rpx;
  background-color: white;
  border-radius: 15rpx;
}

.movie-card image {
  width: 40%;
  height: 340rpx;
}

.movie-card-body {
  width: 60%;
  display: flex;
  padding: 0 20rpx;
  flex-direction: column;
  justify-content: center;
}

.movie-card-body .title {
  margin-bottom: 30rpx;
  font-size: .9em;
  font-weight: bold;
}

.movie-card-body .category {
  font-size: .8em;
}